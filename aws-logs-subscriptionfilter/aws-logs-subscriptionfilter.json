{
    "typeName": "AWS::Logs::SubscriptionFilter",
    "description": "Specifies a subscription filter and associates it with the specified log group.",
    "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-resource-providers-logs.git",

    "properties": {
        "DestinationArn": {
            "description": "The ARN of the destination to deliver matching log events to.",
            "type": "string",
            "minLength": 1
        },
        "Distribution": {
            "description": "The method used to distribute log data to the destination.",
            "type": "string",
            "pattern": "^Random$|^ByLogStream$"
        },
        "FilterName": {
            "description": "A name for the subscription filter.",
            "type": "string",
            "minLength": 1,
            "maxLength": 512,
            "pattern": "[^:*]*"
        },
        "FilterPattern": {
            "description": "A filter pattern for subscribing to a filtered stream of log events.",
            "type": "string",
            "minLength": 0,
            "maxLength": 1024
        },
        "LogGroupName": {
            "description":"The name of the log group.",
            "type": "string",
            "minLength": 1,
            "maxLength": 512,
            "pattern": "[\\.\\-_/#A-Za-z0-9]+"
        },
        "RoleArn": {
            "description":"The ARN of an IAM role that grants CloudWatch Logs permissions to deliver ingested log events to the destination stream.",
            "type": "string",
            "minLength": 1
        }
    },
    "additionalProperties": false,
    "required": [
        "DestinationArn",
        "FilterPattern",
        "LogGroupName"
    ],
    "primaryIdentifier": [
        "/properties/FilterName",
        "/properties/LogGroupName"
    ],
    "createOnlyProperties": [
        "/properties/FilterName",
        "/properties/LogGroupName"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "logs:PutSubscriptionFilter",
                "logs:DescribeSubscriptionFilters"
            ]
        },
        "read": {
            "permissions": [
                "logs:DescribeSubscriptionFilters"
            ]
        },
        "update": {
            "permissions": [
                "logs:PutSubscriptionFilter",
                "logs:DescribeSubscriptionFilters"
            ]
        },
        "delete": {
            "permissions": [
                "logs:DeleteDestination"
            ]
        },
        "list": {
            "permissions": [
                "logs:DescribeSubscriptionFilters"
            ]
        }
    }
}
